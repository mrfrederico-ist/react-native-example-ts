{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "build/dist",
    "lib": [ "dom", "es2015", "es2016" ],
    "baseUrl": ".",
    "paths": {
      "*": [ "src/typings/*" ]
    },
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "declaration": false,
    "noResolve": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true
  },
  "include": [ "./src/**/*" ],
  "exclude": [
    "src/**/__tests__/*",
    "libs",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
